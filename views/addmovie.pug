html
  head
    title Add movie
    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css", integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3", crossorigin="anonymous")

    style.
      body {
        font-family: Arial, sans-serif;
      }
      .container {
        width: 400px;
      }

  body
    .d-flex.align-items-center.justify-content-center.min-vh-100
      .container
        h1.text-center.mb-5 New movie
        form(action='/addmovie', method='POST')
          .mb-3
            label(for="title", class="form-label fs-5 fw-bold") Title
            input(type="text", class="form-control", id="title", name="title")
          .mb-3
            label(for="director", class="form-label fs-5 fw-bold") Director
            input(type="text", class="form-control", id="director", name="director")
          .mb-3
            label(for="year", class="form-label fs-5 fw-bold") Year
            input(type="number", class="form-control", id="year", name="year")
          button(type="submit", class="btn btn-primary w-100") Add