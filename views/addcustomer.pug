html
  head
    title Add new customer
    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css", integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3", crossorigin="anonymous")

    style.
      body {
        font-family: Arial, sans-serif;
      }
      .container {
        width: 400px;
      }

  body
    .d-flex.align-items-center.justify-content-center.min-vh-100
      .container
        h1.text-center.mb-5 New customer
        form(action='/addcustomer', method='POST')
          .mb-3
            label(for="firstname", class="form-label fs-5 fw-bold") Firstname
            input(type="text", class="form-control", id="firstname", name="firstname")
          .mb-3
            label(for="lastname", class="form-label fs-5 fw-bold") Lastname
            input(type="text", class="form-control", id="lastname", name="lastname")
            .mb-3
            label(for="email", class="form-label fs-5 fw-bold") email
            input(type="text", class="form-control", id="email", name="email")
          .mb-3
            label(for="phone", class="form-label fs-5 fw-bold") Phone
            input(type="number", class="form-control", id="phone", name="phone")
          button(type="submit", class="btn btn-primary w-100") Add